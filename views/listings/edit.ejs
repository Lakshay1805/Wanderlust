<%layout("layouts/boilerplate.ejs")-%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit Your Details</h2>
            <form action="/listing/<%=detail._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%=detail.title%>" class="form-control" required>
                    <div class="valid-feedback">
                        Title is Good!
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" name="listing[description]" value="<%=detail.description%>" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        Invalid Description
                    </div>
                </div>
                 <div class="mb-3 edit-img">
                     Last Uploaded Image
                     <br>
                    <img src="<%=originalImageUrl%>" >
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input type="file" name="listing[image]" class="form-control">

                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" name="listing[price]" value="<%=detail.price%>" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Invalid Price
                        </div>
                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" value="<%=detail.country%>" class="form-control"
                            required>
                        <div class="invalid-feedback">
                            Invalid Country
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" value="<%=detail.location%>" class="form-control"
                        required>
                    <div class="invalid-feedback">
                        Invalid Location
                    </div>
                </div>


                <button class="btn btn-dark edit-btn mt-3">SAVE</button>
            </form>
        </div>
    </div>